<?xml version="1.0" encoding="UTF-8"?>

<configuration scan="true" scanPeriod="30 seconds">

  <property name="log.dir" value="target/logs"/>
  <property name="package.under.test" value="com.coremedia.blueprint.common.importfilter"/>

  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss} %-7([%level]) %logger - %message%n%xEx{5}</pattern>
    </encoder>
  </appender>

  <appender name="file" class="ch.qos.logback.core.FileAppender">
    <file>${log.dir}/test.log</file>
    <append>true</append>
    <encoder>
      <pattern>%date{ISO8601} [%5level] [%thread] %logger: %message%n%xEx{5}</pattern>
    </encoder>
  </appender>

  <logger name="${package.under.test}" additivity="false" level="debug">
    <appender-ref ref="file"/>
    <appender-ref ref="stdout"/>
  </logger>

  <root level="warn">
    <appender-ref ref="file"/>
  </root>

</configuration>
