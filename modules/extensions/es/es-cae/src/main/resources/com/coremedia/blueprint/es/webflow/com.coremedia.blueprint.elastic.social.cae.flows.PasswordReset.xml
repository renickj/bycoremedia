<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

  <var name="passwordReset" class="com.coremedia.blueprint.elastic.social.cae.flows.PasswordReset"/>

  <on-start>
    <evaluate expression="passwordResetHelper.redirectLoggedInUserToHomePage(flowRequestContext)"/>
  </on-start>

  <view-state id="passwordReset" model="passwordReset">
    <transition on="submit" to="passwordResetAction" validate="false">
      <set name="requestScope.emailAddress" value="passwordReset.emailAddress"/>
      <evaluate expression="passwordResetHelper.validate(passwordReset, flowRequestContext)"/>
    </transition>
  </view-state>

  <action-state id="passwordResetAction">
    <evaluate expression="passwordResetHelper.reset(passwordReset, flowRequestContext)"/>
    <transition on="yes" to="passwordResetSuccess"/>
    <transition on="no" to="passwordResetFailure"/>
  </action-state>

  <!-- No matter what happens we display a success message -->
  <end-state id="passwordResetSuccess" view="success"/>
  <end-state id="passwordResetFailure" view="success"/>
</flow>