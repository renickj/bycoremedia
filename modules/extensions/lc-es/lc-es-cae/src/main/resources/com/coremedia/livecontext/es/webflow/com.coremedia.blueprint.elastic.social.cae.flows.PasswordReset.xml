<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

  <var name="passwordReset" class="com.coremedia.livecontext.elastic.social.cae.LiveContextPasswordReset"/>
  <input name="next"/>

  <on-start>
    <evaluate expression="passwordResetHelper.redirectLoggedInUserToHomePage(flowRequestContext)"/>
    <set name="flowScope.nextUrl" value="webflowUrlHelper.getNextUrl(next, flowRequestContext)"/>
  </on-start>

  <view-state id="passwordReset" model="passwordReset">
    <transition on="submit" to="passwordResetAction" validate="false">
      <set name="requestScope.emailAddress" value="passwordReset.emailAddress"/>
    </transition>
  </view-state>

  <action-state id="passwordResetAction">
    <evaluate expression="liveContextUserService.resetPassword(passwordReset, flowRequestContext)"/>
    <transition to="passwordResetSuccess"/>
  </action-state>

  <end-state id="passwordResetSuccess" view="success"/>
</flow>