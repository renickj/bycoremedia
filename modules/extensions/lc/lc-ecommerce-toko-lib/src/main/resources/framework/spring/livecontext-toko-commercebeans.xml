<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

  <import resource="livecontext-toko-services.xml"/>
  <import resource="classpath:/framework/spring/livecontext-cache.xml"/>

  <bean name="abstractTokoCommerceBean" scope="prototype" abstract="true"
        class="com.coremedia.livecontext.ecommerce.toko.common.AbstractTokoCommerceBean">
    <property name="commerceBeanFactory" ref="tokoCommerceBeanFactory"/>
    <property name="catalogService" ref="tokoCatalogService"/>
    <property name="commerceCache" ref="commerceCache"/>
    <property name="defaultLocale" value="${livecontext.toko.default.locale}"/>
    <property name="catalogMock" ref="tokoCatalogMock"/>
  </bean>

  <bean name="tokoCommerceBeanFactory:category" parent="abstractTokoCommerceBean"
        class="com.coremedia.livecontext.ecommerce.toko.catalog.CategoryImpl" scope="prototype">
  </bean>
  <bean name="tokoCommerceBeanFactory:product" parent="abstractTokoCommerceBean"
        class="com.coremedia.livecontext.ecommerce.toko.catalog.ProductImpl" scope="prototype">
    <property name="priceService" ref="tokoPriceService"/>
  </bean>
  <bean name="tokoCommerceBeanFactory:sku" parent="abstractTokoCommerceBean"
        class="com.coremedia.livecontext.ecommerce.toko.catalog.ProductVariantImpl" scope="prototype">
    <property name="priceService" ref="tokoPriceService"/>
  </bean>
</beans>
