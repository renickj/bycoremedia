<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">
  <import resource="classpath:/com/coremedia/blueprint/base/settings/impl/bpbase-settings-services.xml"/>
  <import resource="classpath:/com/coremedia/cap/multisite/multisite-services.xml"/>
  <import resource="livecontext-toko-storeconfig.xml"/>

  <bean id="tokoCommerceBeanFactory" class="com.coremedia.blueprint.base.livecontext.ecommerce.common.SpringCommerceBeanFactory"/>

  <bean id="tokoCatalogService" class="com.coremedia.livecontext.ecommerce.toko.catalog.CatalogServiceImpl">
    <property name="commerceBeanFactory" ref="tokoCommerceBeanFactory"/>
    <property name="tokoCatalogMock" ref="tokoCatalogMock"/>
  </bean>

  <bean id="tokoCatalogMock" class="com.coremedia.livecontext.ecommerce.toko.catalog.TokoCatalogMock"/>

  <bean id="tokoIdProvider" class="com.coremedia.livecontext.ecommerce.toko.common.CommerceIdProviderImpl">
    <property name="vendor" value="toko"/>
  </bean>

  <bean id="tokoStoreContextProvider" class="com.coremedia.livecontext.ecommerce.toko.common.StoreContextProviderImpl">
    <property name="sitesService" ref="sitesService"/>
    <property name="settingsService" ref="settingsService"/>
    <property name="storeConfigurations" ref="tokoStoreConfigurations"/>
    <property name="cache" ref="cache"/>
  </bean>

  <bean id="tokoUserContextProvider" class="com.coremedia.livecontext.ecommerce.toko.user.UserContextProviderImpl"/>

  <bean id="tokoPriceService" class="com.coremedia.livecontext.ecommerce.toko.pricing.PriceServiceImpl"/>

</beans>