<?xml version="1.0" encoding="UTF-8"?>
<web-fragment version="3.0"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
              http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd">

  <name>coremedia_lc_preview_cae</name>

  <filter>
    <filter-name>Preview Token Appending Filter</filter-name>
    <filter-class>com.coremedia.livecontext.preview.PreviewTokenMarkerFilter</filter-class>
  </filter>
  <filter>
    <filter-name>WC Cookie Filter</filter-name>
    <filter-class>com.coremedia.livecontext.preview.WcCookieFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>Preview Token Appending Filter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>WC Cookie Filter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

</web-fragment>