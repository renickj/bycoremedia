<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:customize="http://www.coremedia.com/2007/coremedia-spring-beans-customization"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.coremedia.com/2007/coremedia-spring-beans-customization
    http://www.coremedia.com/2007/coremedia-spring-beans-customization.xsd">

  <import resource="classpath:/framework/spring/livecontext-services.xml"/>

  <customize:replace id="catalogServiceBeanIdCustomizer"
                     bean="catalogService"
                     property="useExternalIdForBeanCreation"
                     custom-value="true"/>
  <customize:replace id="catalogServiceCachingBehaviourCustomizer"
                     bean="catalogService"
                     property="enableAggressiveCaching"
                     custom-value="true"/>
  <customize:replace id="marketingSpotServiceBeanIdCustomizer"
                     bean="marketingSpotService"
                     property="useExternalIdForBeanCreation"
                     custom-value="true"/>
  <customize:replace id="marketingSpotCachingBehaviourCustomizer"
                     bean="marketingSpotService"
                     property="enableAggressiveCaching"
                     custom-value="true"/>
  <customize:replace id="marketingSpotWrapperServiceCustomizer"
                     bean="marketingSpotWrapperService"
                     property="useServiceCallsForStudio"
                     custom-value="true"/>
</beans>
