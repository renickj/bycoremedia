<?xml version="1.0" encoding="UTF-8"?>
<exml:component xmlns:exml="http://www.jangaroo.net/exml/0.8"
                xmlns="exml:ext.config"
                xmlns:livecontext="exml:com.coremedia.livecontext.studio.config"
                xmlns:ui="exml:com.coremedia.ui.config">

  <exml:import class="com.coremedia.ui.data.ValueExpression" />
  <exml:import class="com.coremedia.livecontext.studio.config.externalNavigationForm" />

  <exml:cfg name="bindTo" type="ValueExpression" />
  <exml:cfg name="catalogExpression" type="ValueExpression" />

  <viewport>
    <items>
      <livecontext:externalNavigationForm catalogExpression="{config.catalogExpression}" bindTo="{config.bindTo}">
        <plugins>
          <ui:removeItemsPlugin>
            <ui:items>
              <component itemId="{externalNavigationForm.CHILDREN_LIST_ITEM_ID}"/>
              <component itemId="{externalNavigationForm.VISIBILITY_ITEM_ID}"/>
            </ui:items>
          </ui:removeItemsPlugin>
        </plugins>
      </livecontext:externalNavigationForm>
    </items>
  </viewport>
</exml:component>
