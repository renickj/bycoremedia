<?xml version="1.0" encoding="UTF-8"?>
<exml:component xmlns:exml="http://www.jangaroo.net/exml/0.8"
                xmlns="exml:ext.config"
                xmlns:livecontext="exml:com.coremedia.livecontext.studio.config">

  <exml:import class="com.coremedia.ui.data.ValueExpression" />
  <exml:import class="com.coremedia.livecontext.studio.components.product.ViewSettingsRadioGroup" />

  <exml:cfg name="bindTo" type="ValueExpression" />

  <viewport>
    <items>
      <livecontext:viewSettingsRadioGroup bindTo="{config.bindTo}"
                                          propertyName="localSettings.shopNow"/>
    </items>
  </viewport>
</exml:component>
