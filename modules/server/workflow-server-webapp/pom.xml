<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.boots.cms</groupId>
    <artifactId>server</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>

  <artifactId>workflow-server-webapp</artifactId>
  <packaging>war</packaging>

  <description>
    To start the workflow-server-webapp run: mvn tomcat7:run-war
  </description>

  <properties>
    <sql.store.driver>com.mysql.jdbc.Driver</sql.store.driver>
    <sql.store.url>jdbc:mysql://localhost:3306/cm7management</sql.store.url>
    <sql.store.user>cm7management</sql.store.user>
    <sql.store.password>cm7management</sql.store.password>
    <workflow.server.standalone>false</workflow.server.standalone>
  </properties>

  <dependencies>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>workflowserver-blueprint-component</artifactId>
      <version>${project.version}</version>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>com.coremedia.blueprint.base</groupId>
      <artifactId>bpbase-navigation-impl</artifactId>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>com.coremedia.cms</groupId>
      <artifactId>workflow-server-config</artifactId>
      <type>coremedia-application</type>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>com.coremedia.cms</groupId>
      <artifactId>workflow-server-config</artifactId>
      <type>pom</type>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>database-drivers</artifactId>
      <version>${project.version}</version>
      <type>pom</type>
      <scope>runtime</scope>
    </dependency>
  </dependencies>

  <build>
    <finalName>workflow</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-war-plugin</artifactId>
        <configuration>
          <failOnMissingWebXml>false</failOnMissingWebXml>
          <overlays>
            <overlay>
              <groupId>com.coremedia.cms</groupId>
              <artifactId>workflow-server-config</artifactId>
              <type>coremedia-application</type>
              <targetPath>WEB-INF</targetPath>
            </overlay>
          </overlays>
        </configuration>
      </plugin>
      <plugin>
        <groupId>com.coremedia.maven</groupId>
        <artifactId>coremedia-application-maven-plugin</artifactId>
        <extensions>true</extensions>
      </plugin>

      <!--
         invoke "mvn tomcat7:run-war" for running this webapp locally
      -->
      <plugin>
        <groupId>org.apache.tomcat.maven</groupId>
        <artifactId>tomcat7-maven-plugin</artifactId>
        <configuration>
          <path>/${project.build.finalName}</path>
          <port>${WFS_PORT_PREFIX}${HTTP_PORT_SUFFIX}</port>
          <warSourceDirectory>${project.basedir}/src/main/webapp</warSourceDirectory>
          <systemProperties>
            <sql.store.driver>${sql.store.driver}</sql.store.driver>
            <sql.store.url>${sql.store.url}</sql.store.url>
            <sql.store.user>${sql.store.user}</sql.store.user>
            <sql.store.password>${sql.store.password}</sql.store.password>
            <workflow.user>${workflow.user}</workflow.user>
            <workflow.password>${workflow.password}</workflow.password>
            <workflow.server.standalone.password>${workflow.server.standalone.password}</workflow.server.standalone.password>
            <workflow.server.standalone>${workflow.server.standalone}</workflow.server.standalone>
            <workflow.server.adapters.directory>${workflow.server.adapters.directory}</workflow.server.adapters.directory>
            <coremedia.logging.directory>${project.build.directory}/logs</coremedia.logging.directory>
            <coremedia.application.mongoDb.clientURI>mongodb://${mongo.db.host}:27017/</coremedia.application.mongoDb.clientURI>
          </systemProperties>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>websphere</id>
      <!-- workaround Websphere's unperformant resource loading -->
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-war-plugin</artifactId>
            <executions>
              <execution>
                <id>websphere-war-exploded</id>
                <goals>
                  <goal>war</goal>
                </goals>
                <configuration>
                  <webappDirectory>${project.build.directory}/${project.build.finalName}-websphere</webappDirectory>
                  <classifier>websphere</classifier>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>net.jangaroo</groupId>
            <artifactId>webjars-maven-plugin</artifactId>
            <executions>
              <execution>
                <goals>
                  <goal>unpack</goal>
                </goals>
                <configuration>
                  <webappDirectory>${project.build.directory}/${project.build.finalName}-websphere</webappDirectory>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>embedded</id>
      <properties>
        <sql.store.driver>org.hsqldb.jdbc.JDBCDriver</sql.store.driver>
        <sql.store.url>jdbc:hsqldb:mem:cmwf;sql.syntax_mys=true;</sql.store.url>
        <workflow.user>admin</workflow.user>
        <workflow.password>admin</workflow.password>
        <workflow.server.standalone.password>admin</workflow.server.standalone.password>
        <workflow.server.standalone>true</workflow.server.standalone>
        <workflow.server.adapters.directory>com.coremedia.workflow.nocontent.NoDirectoryServiceAdapter</workflow.server.adapters.directory>
      </properties>
      <dependencies>
        <dependency>
          <groupId>org.hsqldb</groupId>
          <artifactId>hsqldb</artifactId>
          <scope>runtime</scope>
        </dependency>
      </dependencies>
    </profile>
  </profiles>

</project>
