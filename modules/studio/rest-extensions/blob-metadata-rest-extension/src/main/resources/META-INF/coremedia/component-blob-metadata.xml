<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <import resource="classpath:/com/coremedia/cap/common/uapi-services.xml"/>
  <import resource="classpath:com/coremedia/rest/cap/cap-rest-service.xml"/>
  <import resource="classpath:com/coremedia/mimetype/mimetype-service.xml"/>

  <bean id="zipFileEntryResource" class="com.coremedia.blueprint.studio.rest.ZipFileEntryResource" scope="prototype">
    <property name="mimeTypeService" ref="mimeTypeService"/>
    <property name="contentRepository" ref="contentRepository"/>
  </bean>

  <bean id="zipMetadataResolver" class="com.coremedia.blueprint.studio.rest.ZipMetadataResolver">
    <property name="name" value="archive"/>
    <property name="entityResourceLinker" ref="linker"/>
  </bean>
</beans>
